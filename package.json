{
  "name": "metal-tools-soy",
  "version": "4.3.2",
  "description": "Tool that can be used to compile metal soy files",
  "license": "BSD",
  "repository": "metal/metal-tools-soy",
  "author": {
    "name": "Maira Bello",
    "email": "maira.araujo@liferay.com"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "files": [
    "bin/**/*.js",
    "index.js",
    "jar",
    "lib/**/*.js"
  ],
  "scripts": {
    "lint": "eslint *.js lib/**/*.js",
