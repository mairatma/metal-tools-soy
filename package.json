{
  "name": "metal-tools-soy",
  "version": "4.2.7",
  "description": "Tool that can be used to compile metal soy files",
  "license": "BSD",
  "repository": "metal/metal-tools-soy",
  "author": {
    "name": "Maira Bello",
    "email": "maira.araujo@liferay.com"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "files": [
    "bin/**/*.js",
    "index.js",
    "jar",
    "lib/**/*.js"
  ],
  "scripts": {
    "ci": "prettier-eslint --list-different && npm run lint && npm run test",
    "format": "prettier-eslint --write index.js lib/**/*.js",
    "lint": "eslint index.js lib/**/*.js",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "bin": {
    "metalsoy": "./bin/metalsoy.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "keywords": [
    "metal",
    "soy"
  ],
  "dependencies": {
    "eslint-config-liferay": "^1.0.2",
    "globby": "^6.1.0",
    "gulp-if": "^2.0.0",
    "gulp-ignore": "^2.0.1",
    "gulp-replace": "^0.5.4",
    "gulp-util": "^3.0.7",
    "gulp-wrapper": "^1.0.0",
    "merge": "^1.2.0",
    "soyparser": "^1.0.3",
    "stream-combiner": "^0.2.2",
    "stream-consume": "^0.1.0",
    "through2": "^2.0.0",
    "vinyl-fs": "^2.2.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "del": "^2.1.0",
    "eslint": "^4.1.1",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "js-beautify": "^1.6.14",
    "lint-staged": "^3.5.1",
    "merge": "^1.2.0",
    "prettier-eslint-cli": "^4.3.2"
  }
}
