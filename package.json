    "gulp-wrapper": "^1.0.0",
    "merge": "^1.2.0",
    "soyparser": "^1.0.3",
    "stream-combiner": "^0.2.2",
    "stream-consume": "^0.1.0",
    "through2": "^2.0.5",
    "vinyl-fs": "^2.2.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "del": "^2.1.0",
    "eslint": "^3.19.0",
    "eslint-config-liferay": "^1.0.1",
    "husky": "^1.3.1",
    "jest": "^20.0.4",
    "js-beautify": "^1.6.14",
    "lint-staged": "^8.1.4",
    "merge": "^1.2.0",
    "prettier": "^1.16.4"
